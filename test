#!/bin/bash

# ตัวแปร
FTP_SERVER="192.168.3.130"
FTP_USER="test"
FTP_PASSWORD="ๅ/_ภ"
REMOTE_DIR="/remote/directory"
LOCAL_DIR="/path/to/local/directory"

# ลูป while เพื่อทำงานซ้ำทุก ๆ 1 นาที
while true
do
    # เรียกใช้คำสั่ง ftp
    ftp -n $FTP_SERVER <<END_SCRIPT
    quote USER $FTP_USER
    quote PASS $FTP_PASSWORD
    prompt
    lcd $LOCAL_DIR
    cd $REMOTE_DIR
    mget *
    quit
END_SCRIPT

    # หยุดรอ 1 นาที
    sleep 60
done
